{
	"name": "tts-discord-bot",
	"description": "Discordで使用できるアクティビティを内蔵した読み上げBOT",
	"private": true,
	"version": "0.1.0",
	"author": "furimu",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "pnpm run --filter \"./packages/**\" --parallel dev",
		"bot": "pnpm -F \"@tts/bot\" dev",
		"migrate": "pnpm --filter db run migrate",
		"drizzle": "pnpm --filter db run drizzle",
		"generate": "pnpm --filter db run generate",
		"type-check": "pnpm -F \"@tts/*\" type-check",
		"build": "pnpm -F \"@tts/*\" build",
		"lint": "pnpm biome check --write . && pnpm biome check --write .",
		"sandbox": "pnpm -F \"@tts/sandbox\" dev"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^20.17.32",
		"@types/pg": "^8.15.4",
		"dotenv-cli": "^8.0.0",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.0.0",
		"typescript": "^5.4.0"
	},
	"dependencies": {
		"@discordjs/opus": "^0.10.0",
		"@discordjs/voice": "^0.18.0",
		"discord.js": "^14.19.2",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.31.0",
		"drizzle-orm": "^0.43.1",
		"ffmpeg-static": "^5.2.0",
		"opusscript": "^0.1.1",
		"pg": "^8.15.6",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"prism-media": "^1.3.5",
		"zod": "^3.25.67"
	},
	"workspaces": [
		"packages/*"
	]
}
