{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}
