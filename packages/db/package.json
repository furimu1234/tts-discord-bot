{
  "name": "@tts/db",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "type-check": "tsc --noEmit -p .",
    "generate": "drizzle-kit generate --name=tts",
    "migrate": "drizzle-kit migrate",
    "drizzle": "drizzle-kit",
    "dbInit": "tsx src/init.ts && pnpm generate",
    "watch": "tsc -p tsconfig.json -w"
  },
  "dependencies": {
    "drizzle-kit": "^0.31.0",
    "drizzle-orm": "^0.43.1",
    "@tts/lib": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
